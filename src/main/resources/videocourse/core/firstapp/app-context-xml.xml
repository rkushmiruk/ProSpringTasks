<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.kushmiruk.videocourse.core.firstapp.Client">
        <constructor-arg type="java.lang.Integer" value="1"/>
        <constructor-arg type="java.lang.String" value="Roman Kushmyruk"/>
    </bean>

    <bean id="eventLogger" class="com.kushmiruk.videocourse.core.firstapp.ConsoleEventLogger"/>

    <bean id="app" class="com.kushmiruk.videocourse.core.firstapp.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
        <property name="event" ref="event"/>
        <lookup-method name="logEvent" bean="event"/>
    </bean>

    <bean id="event" class="com.kushmiruk.videocourse.core.firstapp.Event" scope="prototype">
        <constructor-arg type="java.lang.String"  value="LogEvent for user 1"/>
        <constructor-arg>
            <bean class="java.util.Date" scope="prototype"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>



</beans>