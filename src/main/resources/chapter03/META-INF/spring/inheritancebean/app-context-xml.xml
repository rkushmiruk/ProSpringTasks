<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="inheritParent" class="com.kushmiruk.chapter03.inheritancebean.SimpleBean">
        <property name="name" value="Roman Kushmyruk"/>
        <property name="age" value="32"/>
    </bean>

    <bean id="inheritChild" class="com.kushmiruk.chapter03.inheritancebean.SimpleBean"
          parent="inheritParent">
        <property name="name" value="Roman Kushmyruk"/>
        <property name="age" value="33"/>
    </bean>

</beans>